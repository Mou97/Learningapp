<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="applications.linegraph.SecondActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        tools:layout_editor_absoluteX="0dp"
        android:hint="Entrer la première borne"
        tools:layout_editor_absoluteY="0dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2"


        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText1"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:hint="Entrer la deuxième borne"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2"


        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Tolérance ex : 0.005"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2"


        />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="text"
        android:hint="Entrer votre fonction"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2"


        />

    <Button
        android:id="@+id/button2"
        android:layout_width="216.6dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/icon_dicho_01" />
</RelativeLayout>
