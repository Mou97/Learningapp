<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="applications.linegraph.SupahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="102dp"
            android:layout_height="85.5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/icon_fonctions"
            android:layout_gravity="center_horizontal"
            android:transitionName="buttonTransition2" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:cursorVisible="false"
            android:fontFamily="@font/ubuntu_regular"
            android:text="Etude des fonctions"
            android:textColor="#F2F1F2"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_above="@+id/button5"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:background="@drawable/icon_graphe" />

        <Button
            android:id="@+id/button4"
            android:layout_width="222dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_dicho" />

        <Button
            android:id="@+id/button5"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_above="@+id/button4"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_derivee" />

    </LinearLayout>
</RelativeLayout>
