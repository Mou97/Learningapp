<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/background"
    tools:context=".MainLagrangeActivity">
    <ImageView
        android:layout_width="102dp"
        android:layout_height="85.5dp"
        android:layout_marginLeft="129.1dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/icon_lagrange"
        android:transitionName="buttonTransition3" />


    <EditText
        android:id="@+id/edittextNbrPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:ems="20"
        android:hint="Entrer le nombre de point : "
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:background="@drawable/icon_suivant" />


</RelativeLayout>
