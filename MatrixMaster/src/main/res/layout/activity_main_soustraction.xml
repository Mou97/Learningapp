<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="5dp"
    tools:context="com.example.sg.matrix_test.MainSoustractionActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="Entrer l'ordre de vos deux matrices"
        android:textColor="#F2F1F2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="Nombre de Lignes"
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nombre de Colonnes"
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_suivant" />
</RelativeLayout>
