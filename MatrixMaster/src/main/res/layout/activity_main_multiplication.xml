<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="5dp"
    tools:context="com.example.sg.matrix_test.MainMultiplicationActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="Entrer l'odre de la première matrice"
        android:textColor="#F2F1F2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nbr de Lignes"
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nbr de Colonnes"
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Entrer l'ordre de la deuxième matrice"
        android:textColor="#F2F1F2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nbr de Lignes"
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nbr de Colonnes"
        android:inputType="number"
        android:textColor="#F2F1F2"
        android:textColorHint="#F2F1F2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editText6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_suivant" />

</RelativeLayout>
